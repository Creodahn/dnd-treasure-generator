<section class="section">
  <p>
    Here you can generate the treasure for an entire hoard.
  </p>
</section>
<section class="row">
  <div class="col-6">
    {{ui/labeled-input
      data-test-hoard-cr-input="true"
      input-id="cr-input"
      label="Challenge Rating"
      type="number"

      update=(action (mut cr))
    }}
    <button data-test-calculate-reward-trigger type="button" {{action "selectCR"}}>
      Roll Dice
    </button>

  </div>
  <div class="col-4">
    <div class="card">
      <div class="card-body">
        <h4 class="card-title">Roll Results</h4>
        <ul class="card-text left-lg-padding no-bullets">
          {{outlet}}
        </ul>
      </div>
    </div>
  </div>
</section>