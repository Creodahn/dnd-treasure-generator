<section class="section">
  <p>
    Here you can generate the treasure for an entire hoard.
  </p>
</section>
<section class="row">
  <div class="col-6">
    <Ui::LabeledInput
      @data-test-individual-cr-input="true"
      @input-id="cr-input"
      @label="Challenge Rating"
      @value={{this.cr}}

      @update={{action (mut this.cr)}}
    />
    <button data-test-calculate-reward-trigger type="button" {{action "selectCR"}}>
      Roll Dice
    </button>

  </div>
  <div class="col-4">
    <div class="card">
      <div class="card-body">
        <h4 class="card-title">Roll Results</h4>
        <ul class="card-text left-lg-padding no-bullets">
          {{#if this.coinRewards.rolls}}
            <li>
              {{roll-format this.coinRewards.rolls}} = {{currency-format this.coinRewards.total this.coinRewards.coinType}}
            </li>
          {{/if}}
          {{#each this.rewards as |reward|}}
            <li>
              {{roll-format reward.rolls}} = {{reward.total}}
              {{#each reward.items as |item|}}
                <div>
                  {{rewardItem.count}} {{text-reward-format item.count item.name}}
                </div>
              {{/each}}
            </li>
          {{/each}}
        </ul>
      </div>
    </div>
  </div>
</section>